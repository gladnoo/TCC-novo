<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".duvidas_ia-activity">

    <!-- CARD PRINCIPAL -->
<com.google.android.material.card.MaterialCardView
android:id="@+id/cardIa"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_margin="20dp"
app:cardCornerRadius="24dp"
app:cardUseCompatPadding="true"
app:cardElevation="8dp"
app:strokeColor="#7A2F92"
app:strokeWidth="1dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- badge / subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="#F2D9FF"
            android:includeFontPadding="false"
            android:letterSpacing="0.05"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:text="Assistente IA"
            android:textColor="#7A2F92"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Possui alguma dúvida?"
            android:textColor="#5D1E78"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- descrição -->
        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lineSpacingExtra="2dp"
            android:text="Tire com a nossa IA integrada ao app. Pergunte sobre consultas, parto e cuidados — resposta na hora."
            android:textColor="#4A4A4A"
            android:textSize="14sp" />

        <!-- “chips” de sugestões (só visual) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#F6E8FF"
                android:includeFontPadding="false"
                android:letterSpacing="0.02"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="Amamentação"
                android:textColor="#7A2F92"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#F6E8FF"
                android:includeFontPadding="false"
                android:letterSpacing="0.02"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="Consultas"
                android:textColor="#7A2F92"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F6E8FF"
                android:includeFontPadding="false"
                android:letterSpacing="0.02"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:text="Parto"
                android:textColor="#7A2F92"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- CTA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAbrirIa"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="PERGUNTAR AGORA"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:backgroundTint="#7A2F92"
            app:cornerRadius="16dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


    <View
        android:id="@+id/circleDecor"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="52dp"
        android:alpha="0.55"
        android:background="#F2D9FF"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>