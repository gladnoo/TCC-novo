<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="6dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/perfil"
                android:tint="@color/muted" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvNome"
                    style="@style/Text.Title"
                    android:text="Ana" />

                <TextView
                    android:id="@+id/tvData"
                    style="@style/Text.Meta"
                    android:text="19 abr'il" />
            </LinearLayout>
        </LinearLayout>

        <!-- texto -->
        <TextView
            android:id="@+id/tvTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ink"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:paddingBottom="8dp"
            tools:text="Meninas, amamentar vale a pena?" />

        <!-- mÃ©tricas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/icLike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/muted"
                android:src="@drawable/ic_heart_24" />

            <TextView
                android:id="@+id/tvLikes"
                style="@style/Text.Meta"
                android:paddingStart="6dp"
                android:paddingEnd="18dp"
                tools:text="4" />

            <ImageView
                android:id="@+id/icComment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/muted"
                android:src="@drawable/ic_comment_24" />

            <TextView
                android:id="@+id/tvComments"
                style="@style/Text.Meta"
                android:paddingStart="6dp"
                tools:text="8" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_line"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>